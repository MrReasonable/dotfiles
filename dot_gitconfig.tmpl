[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[user]
	name = {{ .name | quote }}
	useConfigOnly = true
[pull]
	ff = only
[branch]
  autoSetupRebase = always
[init]
	defaultBranch = main
[core]
	excludesfile = {{ .chezmoi.homeDir }}/.gitignore
[apply]
	whitespaces = nowarn
[color]
	ui = auto
[push]
  autoSetupRemote = true
[blame]
	ignoreRevsFile = .git-blame-ignore-revs
{{- if eq .chezmoi.hostname "G6PYKYXP07"}}
[alias]
	lb = latest-build
{{- end }}
